<%= link_to item.url, target: "_blank", class:"flex-col rounded overflow-hidden shadow-lg hover:shadow-2xl item-card mx-auto m-4 relative" do %>
  <%= image_tag(item.image, class:"object-cover w-full") %>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">
      <%= item.title %>
    </div>
  </div>
  <div class="px-1 py-2 absolute bottom-0">
    <% if item.price%>
    <span
    class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mx-2 my-1"
    ><%= item.price%></span
    >
    <% end %>
    <% if item.area%>
    <span
    class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mx-2 my-1"
    ><%= item.area%></span
    >
    <% end %>
    <% if item.city%>
    <span
    class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mx-2 my-1"
    ><%= item.city%></span
    >
    <% end %>
    <% if item.zipcode%>
    <span
    class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mx-2 my-1"
    ><%= item.zipcode%></span
    >
    <% end %>
    <% if item.nature%>
    <span
    class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mx-2 my-1"
    ><%= item.nature%></span
    >
    <% end %>
  </div>
<% end %>
